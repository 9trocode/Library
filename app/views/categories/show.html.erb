<div class="wrapper">

	<p><strong>Category:</strong> <%= @category.name %></p>

	<ul>
		<% @category.books.each do |book| %>
		<li><%= link_to book.title, book %></li>
		<% end %>
	</ul>

	<% if user_signed_in? %> 
	<%= link_to 'Edit', edit_category_path(@category) %> |
	<%= link_to 'Back', categories_path %>

	<% end %>

</div>
